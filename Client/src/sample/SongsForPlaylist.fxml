<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PlaylistController">
   <children>
      <ScrollPane prefHeight="200.0" prefWidth="200.0">
        <content>
          <AnchorPane>
               <children>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/SceneMakePlaylist.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <HBox alignment="TOP_RIGHT" spacing="50.0">
         <children>
            <VBox alignment="TOP_CENTER" fillWidth="false">
               <children>
                  <Label alignment="TOP_RIGHT" text="Enter Playlist Name" textFill="#e8c7c7" wrapText="true">
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameOfPlaylist" prefHeight="40.0" prefWidth="400.0" promptText="Playlist Name">
                     <font>
                        <Font name="Comic Sans MS" size="28.0" />
                     </font>
                  </TextField>
                  <Label text="Select Songs" textFill="#e8c7c7">
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                  </Label>
                  <CheckListView fx:id="allSongsList" minWidth="400.0" />
                  <Label fx:id="warn" />
                  <JFXButton fx:id="doneButton" buttonType="RAISED" onAction="#makePlaylist" text="All Done!" textAlignment="CENTER" textFill="#e8c7c7" wrapText="true">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </JFXButton>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <JFXButton fx:id="backButton" buttonType="RAISED" onAction="#goBack" text="">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Images/GoBack.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="Comic Sans MS" size="15.0" />
                     </font>
                  </JFXButton>
               </children>
            </VBox>
         </children>
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</StackPane>
