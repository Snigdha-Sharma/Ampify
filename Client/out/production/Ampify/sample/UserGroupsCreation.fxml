<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.UserGroupController">
   <children>
      <ScrollPane minHeight="700.0" minWidth="1000.0">
        <content>
          <AnchorPane>
               <children>
                  <ImageView preserveRatio="true">
                     <image>
                        <Image url="@../Images/SceneMakePlaylist.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <HBox alignment="TOP_RIGHT" StackPane.alignment="TOP_RIGHT">
         <children>
            <VBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Enter group name" textAlignment="CENTER" textFill="#e8c7c7">
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </Label>
                  <JFXTextField fx:id="grpName" alignment="CENTER_RIGHT" focusColor="#1b388d" maxWidth="-Infinity" pickOnBounds="false" prefWidth="400.0" promptText="Group Name" unFocusColor="#d09f9f">
                     <font>
                        <Font name="Comic Sans MS Bold" size="28.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </JFXTextField>
                  <Label text="Select Users" textFill="#e8c7c7">
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                     </padding>
                  </Label>
                  <CheckListView fx:id="allUsers" maxWidth="-Infinity" prefWidth="400.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
                     </padding>
                  </CheckListView>
                  <JFXButton fx:id="done" buttonType="RAISED" onAction="#makeUserGroup" text="All Done!" textFill="#e8c7c7">
                     <font>
                        <Font name="Comic Sans MS Bold" size="33.0" />
                     </font>
                     <effect>
                        <Lighting>
                           <bumpInput>
                              <Shadow />
                           </bumpInput>
                           <light>
                              <Light.Distant />
                           </light>
                        </Lighting>
                     </effect>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                  </JFXButton>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox>
               <children>
                  <JFXButton fx:id="back" buttonType="RAISED" onAction="#goBack">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Images/GoBack.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <effect>
                        <Lighting>
                           <bumpInput>
                              <Shadow />
                           </bumpInput>
                           <light>
                              <Light.Distant />
                           </light>
                        </Lighting>
                     </effect>
                  </JFXButton>
               </children>
               <padding>
                  <Insets left="200.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</StackPane>
